# =============================================================================
# HYPERLIQUID TRADING BOT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# Lines starting with # are comments

# =============================================================================
# REQUIRED - API CREDENTIALS
# =============================================================================
# Your HyperLiquid account address (get from app.hyperliquid.xyz)
ACCOUNT_ADDRESS=0x_YOUR_WALLET_ADDRESS_HERE

# API Secret key from HyperLiquid API settings
# KEEP THIS SECRET - NEVER SHARE OR COMMIT TO GIT
API_SECRET=0x_YOUR_API_SECRET_HERE

# =============================================================================
# NETWORK CONFIGURATION
# =============================================================================
# Set to 'true' for testnet, 'false' for mainnet (real money!)
TESTNET=true

# =============================================================================
# TRADING CONFIGURATION
# =============================================================================
# Default symbol to trade (if not using multi-asset mode)
SYMBOL=SOL

# Trading strategy mode
BOT_MODE=rule_based

# Maximum leverage allowed
MAX_LEVERAGE=5

# Candle timeframe: 1m, 5m, 15m, 1h, 4h
TIMEFRAME=1m

# =============================================================================
# MULTI-ASSET MODE (Optional)
# =============================================================================
# Enable multi-asset trading
MULTI_ASSET_MODE=false

# Assets to trade (comma-separated)
MULTI_ASSETS=BTC,ETH,SOL

# Maximum concurrent positions
MAX_POSITIONS=3

# =============================================================================
# RISK MANAGEMENT
# =============================================================================
# Maximum daily loss before kill switch activates (percentage)
MAX_DAILY_LOSS_PCT=5.0

# Maximum drawdown before kill switch activates (percentage)
MAX_DRAWDOWN_PCT=10.0

# Base position size as percentage of account
POSITION_SIZE_PCT=25

# Safety cap - maximum position size regardless of Kelly
MAX_POSITION_SIZE_PCT=40

# Risk per trade (for stop loss calculation)
RISK_PER_TRADE_PCT=2.0

# =============================================================================
# KELLY CRITERION (Adaptive Position Sizing)
# =============================================================================
# Enable Kelly criterion position sizing
KELLY_ENABLED=true

# Fractional Kelly (0.5 = Half Kelly, safer)
KELLY_FRACTION=0.5

# Minimum trades before Kelly starts
KELLY_MIN_TRADES=20

# =============================================================================
# TP/SL DEFAULTS
# =============================================================================
# Default take profit percentage
DEFAULT_TP_PCT=3.0

# Default stop loss percentage
DEFAULT_SL_PCT=1.5

# =============================================================================
# STRATEGY SETTINGS
# =============================================================================
# Signal score threshold (12-15 recommended)
SIGNAL_THRESHOLD=12

# ADX threshold for trending market detection
ADX_TRENDING_THRESHOLD=25

# =============================================================================
# PAPER TRADING MODE (For Testing)
# =============================================================================
# Enable paper trading (simulated trades, no real money)
PAPER_TRADING=false

# Virtual balance for paper trading
PAPER_TRADING_BALANCE=1000

# =============================================================================
# DATABASE (PostgreSQL - Optional but Recommended)
# =============================================================================
# Connection URL (leave empty to use JSONL file logging only)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=

# =============================================================================
# TELEGRAM NOTIFICATIONS (Optional but Recommended)
# =============================================================================
# Create a bot via @BotFather and get your chat ID via @userinfobot
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# Notification settings
TG_NOTIFY_SIGNALS=true
TG_NOTIFY_FILLS=true
TG_NOTIFY_PNL_WARNINGS=true
TG_STATUS_INTERVAL=3600

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO
