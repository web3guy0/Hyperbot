# =============================================================================
#                         HYPERBOT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values.
# Only essential settings here. Advanced settings use smart defaults.

# =============================================================================
# ðŸ”‘ API CREDENTIALS (Required)
# =============================================================================
API_SECRET=your_hyperliquid_api_secret_here
ACCOUNT_ADDRESS=your_wallet_address_here
TESTNET=false

# =============================================================================
# ðŸ“Š TRADING SETTINGS
# =============================================================================
SYMBOL=SOL
MAX_LEVERAGE=10
MAX_POSITIONS=1
TIMEFRAME=15m

# =============================================================================
# ï¿½ï¿½ï¸ RISK MANAGEMENT
# =============================================================================
MAX_DRAWDOWN_PCT=10.0
MAX_DAILY_LOSS_PCT=5.0
POSITION_SIZE_PCT=40
MAX_POSITION_SIZE_PCT=50
RISK_PER_TRADE_PCT=3.0

# ATR-based TP/SL (dynamic, adapts to volatility)
ATR_SL_MULTIPLIER=2.0
ATR_TP_MULTIPLIER=3.5

# =============================================================================
# ðŸŽ¯ SIGNAL QUALITY (Higher = Fewer but Better Trades)
# =============================================================================
# 8=Aggressive, 10=Balanced, 12=Conservative, 15+=Ultra-Safe
MIN_SIGNAL_SCORE=10

# =============================================================================
# ðŸ§  HUMAN-LIKE TRADING (Anti-Stop-Hunt)
# =============================================================================
USE_HUMAN_LOGIC=true
HUMAN_LOGIC_WEIGHT=2.0

# =============================================================================
# ðŸ“± TELEGRAM NOTIFICATIONS (Optional)
# =============================================================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# ðŸ—„ï¸ DATABASE (Required)
# =============================================================================
DATABASE_URL=postgresql://user:pass@host/dbname?sslmode=require

# =============================================================================
# âš™ï¸ SYSTEM
# =============================================================================
LOG_LEVEL=INFO
BOT_MODE=rule_based

# Health check HTTP endpoint for process monitoring (PM2, Docker, etc.)
HEALTH_CHECK_PORT=8080

# =============================================================================
#                     ADVANCED SETTINGS (Optional)
# =============================================================================
# Only change these if you know what you're doing.
# Most use smart defaults - uncomment to override.

# --- Kelly Criterion (Adaptive Position Sizing) ---
KELLY_ENABLED=true
KELLY_FRACTION=0.5

# --- Timeframes ---
HTF_INTERVALS=1h,4h

# --- Multi-Asset (Disabled for small accounts) ---
MULTI_ASSET_MODE=false

# --- Paper Trading ---
PAPER_TRADING=false

# --- ML Auto-Training ---
AUTO_TRAIN_ENABLED=true

# =============================================================================
#                     ANTI-CHASE SETTINGS (Advanced)
# =============================================================================
# These prevent buying tops and selling bottoms.
# RSI_EXTREME_LONG_BLOCK=65   # Block LONG if RSI > this (overbought)
# RSI_EXTREME_SHORT_BLOCK=35  # Block SHORT if RSI < this (oversold)
# RSI_PULLBACK_ENTRY_LONG=45  # Good LONG entry if RSI < this
# RSI_PULLBACK_ENTRY_SHORT=55 # Good SHORT entry if RSI > this
# MAX_CHASE_CANDLES=4         # Block if N+ same-direction candles
# WARN_CHASE_CANDLES=3        # Penalty if N+ same-direction candles

# =============================================================================
#                     VOLUME & VOLATILITY FILTERS (Advanced)
# =============================================================================
# MIN_VOLUME_RATIO=0.6        # Block if volume < 60% of average (fake moves)
# MIN_ATR_PCT=0.2             # Block if ATR < 0.2% of price (no volatility)

# =============================================================================
#                     TIME-OF-DAY FILTER (Optional)
# =============================================================================
# Avoid low-liquidity periods (more fakeouts/wicks)
# TRADING_HOURS_START=08:00   # UTC start time (empty = disabled)
# TRADING_HOURS_END=22:00     # UTC end time (empty = disabled)

# =============================================================================
