# ==============================================================================
#                            HYPERBOT CONFIGURATION
# ==============================================================================
# Copy to .env and fill in your values

# ------------------------------------------------------------------------------
# ðŸ”‘ API CREDENTIALS (Required)
# ------------------------------------------------------------------------------
API_SECRET=your_hyperliquid_api_secret
ACCOUNT_ADDRESS=your_wallet_address
TESTNET=false

# ------------------------------------------------------------------------------
# ðŸ“Š TRADING (Required)
# ------------------------------------------------------------------------------
SYMBOL=SOL                    # Trading pair (SOL, BTC, ETH, HYPE, etc.)
MAX_LEVERAGE=10               # Maximum leverage (1-50)
MAX_POSITIONS=1               # Max concurrent positions
TIMEFRAME=15m                 # Candle timeframe (1m, 5m, 15m, 1h, 4h)

# ------------------------------------------------------------------------------
# ðŸ›¡ï¸ RISK MANAGEMENT (Required)
# ------------------------------------------------------------------------------
MAX_DRAWDOWN_PCT=10           # Stop bot if account drops 10%
MAX_DAILY_LOSS_PCT=5          # Stop bot if daily loss exceeds 5%
POSITION_SIZE_PCT=30          # Position size as % of equity
MAX_POSITION_SIZE_PCT=40      # Maximum position size %
RISK_PER_TRADE_PCT=1.5        # Risk per trade as % of account

# ------------------------------------------------------------------------------
# ðŸŽ¯ TAKE PROFIT / STOP LOSS (Required)
# ------------------------------------------------------------------------------
# At 10x leverage: TP% / 10 = price move needed
# Example: 10% TP = 1% price move, 15% SL = 1.5% price move

USE_FIXED_PNL_TARGETS=true    # true = use TP/SL below, false = use ATR
TARGET_TP_PNL=10              # Take profit at 10% ROE
TARGET_SL_PNL=15              # Stop loss at 15% ROE (safety net)

# ATR-based (only if USE_FIXED_PNL_TARGETS=false)
ATR_SL_MULTIPLIER=3.5
ATR_TP_MULTIPLIER=5.0

# ------------------------------------------------------------------------------
# ðŸ“ˆ SIGNAL QUALITY (Required)
# ------------------------------------------------------------------------------
# Higher threshold = fewer but higher quality trades
# 8 = Aggressive (more trades)
# 10 = Balanced
# 12 = Conservative (fewer trades)
# 15+ = Ultra-safe (very few trades)

MIN_SIGNAL_SCORE=12

# ------------------------------------------------------------------------------
# ðŸ§  FILTERS (Recommended)
# ------------------------------------------------------------------------------
USE_HUMAN_LOGIC=true          # Anti-chase, anti-FOMO filters
HUMAN_LOGIC_WEIGHT=2.0        # Filter strength (1.0-3.0)
KELLY_ENABLED=true            # Adaptive position sizing
KELLY_FRACTION=0.5            # Kelly multiplier (0.25-1.0)

# ------------------------------------------------------------------------------
# ðŸ“± TELEGRAM (Optional)
# ------------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=           # Get from @BotFather
TELEGRAM_CHAT_ID=             # Get from @userinfobot

# ------------------------------------------------------------------------------
# ðŸ—„ï¸ DATABASE (Required)
# ------------------------------------------------------------------------------
DATABASE_URL=postgresql://user:pass@host/db?sslmode=require

# ------------------------------------------------------------------------------
# âš™ï¸ SYSTEM
# ------------------------------------------------------------------------------
LOG_LEVEL=INFO                # DEBUG, INFO, WARNING, ERROR
BOT_MODE=rule_based           # rule_based or ml
HEALTH_CHECK_PORT=8080        # HTTP health check port
HTF_INTERVALS=1h,4h           # Higher timeframes for confirmation
MULTI_ASSET_MODE=false        # Trade multiple assets
PAPER_TRADING=false           # Paper trading mode
AUTO_TRAIN_ENABLED=true       # Auto-train ML models

# ==============================================================================
#                         ADVANCED SETTINGS (Optional)
# ==============================================================================
# Uncomment to override defaults

# --- Anti-Chase Filters ---
# RSI_EXTREME_LONG_BLOCK=65   # Block LONG if RSI > 65
# RSI_EXTREME_SHORT_BLOCK=35  # Block SHORT if RSI < 35
# MAX_CHASE_CANDLES=4         # Block after 4+ same-direction candles

# --- Volume/Volatility Filters ---
