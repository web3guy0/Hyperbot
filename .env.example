# =============================================================================
#                         HYPERBOT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values.
# Only essential settings here. Advanced settings use smart defaults.

# =============================================================================
# üîë API CREDENTIALS (Required)
# =============================================================================
API_SECRET=your_hyperliquid_api_secret_here
ACCOUNT_ADDRESS=your_wallet_address_here
TESTNET=false

# =============================================================================
# üìä TRADING SETTINGS
# =============================================================================
SYMBOL=SOL
MAX_LEVERAGE=10
MAX_POSITIONS=1
TIMEFRAME=15m

# =============================================================================
# ÔøΩÔøΩÔ∏è RISK MANAGEMENT
# =============================================================================
MAX_DRAWDOWN_PCT=10.0
MAX_DAILY_LOSS_PCT=5.0
POSITION_SIZE_PCT=40
MAX_POSITION_SIZE_PCT=50
RISK_PER_TRADE_PCT=3.0

# ATR-based TP/SL (dynamic, adapts to volatility)
ATR_SL_MULTIPLIER=2.0
ATR_TP_MULTIPLIER=3.5

# =============================================================================
# üéØ SIGNAL QUALITY (Higher = Fewer but Better Trades)
# =============================================================================
# 8=Aggressive, 10=Balanced, 12=Conservative, 15+=Ultra-Safe
MIN_SIGNAL_SCORE=10

# =============================================================================
# üß† HUMAN-LIKE TRADING (Anti-Stop-Hunt)
# =============================================================================
USE_HUMAN_LOGIC=true
HUMAN_LOGIC_WEIGHT=2.0

# =============================================================================
# üì± TELEGRAM NOTIFICATIONS (Optional)
# =============================================================================
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# üóÑÔ∏è DATABASE (Required)
# =============================================================================
DATABASE_URL=postgresql://user:pass@host/dbname?sslmode=require

# =============================================================================
# ‚öôÔ∏è SYSTEM
# =============================================================================
LOG_LEVEL=INFO
BOT_MODE=rule_based

# =============================================================================
#                     ADVANCED SETTINGS (Optional)
# =============================================================================
# Only change these if you know what you're doing.
# Most use smart defaults - uncomment to override.

# --- Kelly Criterion (Adaptive Position Sizing) ---
KELLY_ENABLED=true
KELLY_FRACTION=0.5

# --- Timeframes ---
HTF_INTERVALS=1h,4h

# --- Multi-Asset (Disabled for small accounts) ---
MULTI_ASSET_MODE=false

# --- Paper Trading ---
PAPER_TRADING=false

# --- ML Auto-Training ---
AUTO_TRAIN_ENABLED=true
